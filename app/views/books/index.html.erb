<h1>Books</h1>



 <table>
   <thead>
   <tr "header1">
       <th>Title</th>
       <th>Body</th>
       <th></th>
   </tr>
   </thead>
   
   <% @books.each do |book| %>
   <tbody>
     <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td> <%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit",edit_book_path(book.id) %></td>
         <td></td>
     </tr>
   </tbody>
   <% end %>
   
   </table>
   
 
     
   




<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>